apiVersion: apps/v1
kind: Deployment
metadata:
  name: pricingservice
  namespace: easytrade
spec:
  selector:
    matchLabels:
      app: pricingservice
  template:
    metadata:
      labels:
        app: pricingservice
        hands: onTraining
    spec:
      containers:
      - name: pricingservice
        image: gcr.io/dynatrace-demoability/easytrade/pricingservice:0d8bdc7
        ports:
        - containerPort: 80
        env:
        - name: MANAGER_HOSTANDPORT
          value: "manager:80"
        - name: RABBITMQ_HOST
          value: "rabbitmq"
        - name: RABBITMQ_USER
          value: "userxxx"
        - name: RABBITMQ_PASSWORD
          value: "passxxx"
        - name: DT_CUSTOM_PROP
          value: Environment=Dev
        - name: DT_CUSTOM_TAGS
          value: hotday customer=acme
        resources:
          requests:
            cpu: 100m
            memory: 350Mi
---
apiVersion: v1
kind: Service
metadata:
  name: pricingservice
  namespace: easytrade
spec:
  type: ClusterIP
  selector:
    app: pricingservice
  ports:
  - name: http
    port: 80
    targetPort: 80